<div class="banner-profile">
  <div class="profile-content">
    <!-- profile picture and name -->
    <% if current_user.photo_fake != nil%>
      <%= image_tag current_user.photo_fake, crop: :thumb, gravity: :face, class: "avatar-profile"%>
    <% elsif current_user.model[:photo] == nil %>
      <%= image_tag "https://collaborativecbt.com/wp-content/uploads/2016/12/default-avatar.png", class: "avatar-profile"%>
    <% else %>
      <%= cl_image_tag current_user.photo, crop: :thumb, gravity: :face, class: "avatar-profile"%>
    <% end %>
    <h3><%= current_user.first_name %> <%= current_user.last_name %></h3>

    <!-- Player's stats -->
    <div class="game-infos">
      <div class="game-info">
          <h3>
            <%= current_user.bookings.length  %>
          </h3>
          <h4>Games<br>Played</h4>
      </div>
      <div class="game-info middle-info">
          <h3>
            <%= current_user.bookings.length  %>
          </h3>
          <h4>Games<br>Missed</h4>
      </div>
      <div class="game-info">
          <h3>
            <%= current_user.bookings.length  %>
          </h3>
          <h4>Goals<br>Scored</h4>
      </div>
    </div>

    <!-- Player's info -->
    <div class="profile-infos">
      <table>
        <tbody>

          <tr>
            <td class="info-category">
              Position:
            </td>
            <td class="info-value">
              <%= current_user.position.capitalize if current_user.position %>
            </td>
          </tr>
          <tr>
            <td class="info-category">
              Nationality:
            </td>
            <td class="info-value">
              <%= current_user.nationality.capitalize  if current_user.nationality %>
            </td>
          </tr>
          <tr>
            <td class="info-category">
              Weight:
            </td>
            <td class="info-value">
              <%= current_user.weight if current_user.weight %> kg
            </td>
          </tr>
          <tr>
            <td class="info-category">
              Size:
            </td>
            <td class="info-value">
              <% if current_user.size %>
                <%= current_user.size.to_s[0] %>.<%= current_user.size.to_s[1..-1] %>m
              <% end %>
            </td>
            <tr>
            <td class="info-category">
              Phone number:
            </td>
            <td class="info-value">
              <% if current_user.phone_number %>
                <%= current_user.phone_number[0..3] %>
                <%= current_user.phone_number[4..6] %>
                <%= current_user.phone_number[7..9] %>
                <%= current_user.phone_number[9..11] %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  <%= link_to "Update my information", edit_user_registration_path, class: 'gray-button' %>
  </div>
  <div class="banner-profile-picture" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0) 20%, rgba(0,0,0,1)), url('https://static1.squarespace.com/static/57190c9960b5e9da710a2bf3/t/571d77558259b5e9df69a180/1461548887190/empty-soccer-field-night-photos-6.jpg?format=1500w');">
  </div>
</div>
