<div class="container">
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">New Field</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= simple_form_for @field do |f| %>
            <%= f.input :name %>
            <%= f.input :location %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          <%= f.button :submit, "Create Field", class: 'btn btn-primary' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <div class="form-design">
        <h2>Create a game</h2>
        <%= simple_form_for(@game) do |f| %>
          <div class="form-inputs">
            <%= f.input :datetime, label: "Date & Time", required: true, as: :string, placeholder: "Please select a day and an hour" %>
            <%= f.input :field, placeholder:  "UrbanSoccer - La DÃ©fense", collection: Field.all.map(&:name) %>
            <h6 data-toggle="modal" data-target="#exampleModal">
              Don't find your field? Add a new one here!
            </h6>
            <%= f.input :number_of_players, required: true, :collection => [12, 14, 16], hint: "Remember to add one substitute per team" %>
            <%= f.input :price %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Create game", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>



</div>
